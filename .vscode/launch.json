{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Python (Flask)",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "backend/app.py",
        "FLASK_DEBUG": "1"
      },
      "args": [
        "run",
        "--no-debugger",
        "--port=5001"
      ],
      "jinja": true,
      "justMyCode": true
    },
    {
      "name": "Run Next.js",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev",
      "cwd": "${workspaceFolder}/frontend"
    }
  ]
}
